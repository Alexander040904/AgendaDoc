generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Role {
  id    Int     @id @default(autoincrement())
  type  String

  users User[]
}

model User {
  id         Int      @id @default(autoincrement())
  role_id    Int
  name       String   @db.VarChar(150)
  email      String   @unique @db.VarChar(250) 
  password   String   @db.VarChar(100)
  age        Int
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt          @map("updated_at")

  role       Role     @relation(fields: [role_id], references: [id])
  
  patient  Patient?
  doctor     Doctor?
  

}


model Doctor {
  id                 Int                 @id @default(autoincrement())
  user_id             Int                 @unique
  consultationAmount Int

  user               User                @relation(fields: [user_id], references: [id], onDelete: Cascade)
  doctorDisciplines  DoctorDiscipline[]
  quotes  Quote[]
}

model Discipline {
  id                Int                 @id @default(autoincrement())
  discipline        String

  doctorDisciplines DoctorDiscipline[]
}

model DoctorDiscipline {
  id           Int        @id @default(autoincrement())
  doctorId     Int
  disciplineId Int

  doctor      Doctor     @relation(fields: [doctorId], references: [id])
  discipline  Discipline @relation(fields: [disciplineId], references: [id])

  @@unique([doctorId, disciplineId])
}

model Patient {
  id               Int      @id @default(autoincrement())
  user_id           Int      @unique
  blood_type        String?  @db.VarChar(5)    
  weight           Decimal? @db.Decimal(5, 2)  
  height           Decimal? @db.Decimal(4, 2)  
  medical_history   String?  @db.Text
  emergency_contact String?  @db.VarChar(150)
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  user             User     @relation(fields: [user_id], references: [id])
  quotes  Quote[]
}

model Quote {
  id         Int      @id @default(autoincrement())
  doctorId   Int
  patientId  Int
  date       DateTime
  status     Boolean
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  doctor     Doctor   @relation(fields: [doctorId], references: [id])
  patient    Patient  @relation(fields: [patientId], references: [id])
}
